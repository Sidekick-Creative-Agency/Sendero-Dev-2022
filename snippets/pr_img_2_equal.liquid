{%- render 'product_labels',product:product -%}


{% for i in (1..product.images.size) %}
    {% if product.images[i].alt contains 'main' %}
        {% assign image = product.images[i] %}
    {% break %}
    {% else %}
        {%- assign image = product.images[0] | default:settings.placeholder_img -%}
   {% endif %}
{% endfor %}

    <a class="db" href="{{url_last}}">

        <div {% if image.alt contains 'imgt4_colorsolid' %}data-widths="[1]" {% endif %}class="pr_lazy_img main-img nt_img_ratio lazyloadt4s nt_bg_lz" data-id="{{image.id}}" data-bgset="{{ image | img_url: '1x1' }}" data-parent-fit="width" data-wiis data-ratio="{{image.aspect_ratio}}" data-sizes="auto"></div>

</a>

{%- if product.images.size > 1 -%}
    {% for i in (1..product.images.size) %}
        {% if product.images[i].alt contains 'hover' %}
            {% assign image = product.images[i] %}
        {% break %}
        {% else %}
            {%- assign image = product.images[1] | default:settings.placeholder_img -%}
       {% endif %}
    {% endfor %}
    <div {% if image.alt contains 'imgt4_colorsolid' %}data-widths="[1]" {% endif %}class="hover_img pa pe_none t__0 l__0 r__0 b__0 op__0"><div class="pr_lazy_img back-img pa lazyloadt4s nt_bg_lz" data-id="{{image.id}}" data-bgset="{{ image | img_url: '1x1' }}" data-parent-fit="width" data-wiis data-ratio="{{image.aspect_ratio}}" data-sizes="auto"></div></div>
{%- endif -%} 