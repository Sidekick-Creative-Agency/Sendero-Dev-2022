{%- liquid
  assign sett_title = section.settings.title
  assign style_title = section.settings.style_title
  assign title_align = section.settings.header_align -%}
{%- if sett_title != blank -%}
	{%- if style_title != 'title_10' -%}
		<div class="wrap_title {{section_title}} des_title_1">
		<h2 class="section-title pr {{style_title}}" >{{sett_title}}</h2>
		<span class="dn tt_divider"><span></span><i class="dn clpr{{section.settings.show_clpr}} {{style_title |split:'+' | last }} la-{{section.settings.ic_tt}}"></i><span></span></span><span class="section-subtitle db tc{% if section.settings.sub_font == '2' %} sub-title{% endif %}">{{section.settings.sub_title}}</span>
		</div>
	{%- else -%}
	    <div class="row al_center fl_center title_10 {{section_title}}">
	      <div class="col-auto col-md"><h2 class="dib section-title  {{style_title}}">{{sett_title}}</h2></div>
	      <div class="col-auto"><a href="{{url|default:'/'}}">{{section.settings.btn_title}}</a></div>
	    </div>
	{%- endif -%}
{%- endif -%}

<style>
	{% if section.settings.heading_size %}
	.nt_se_{{section.id}} .wrap_title .section-title {
			font-size: {{section.settings.heading_size}}px;
		}
	{% endif %}
	{% if section.settings.heading_align %}
		.nt_se_{{section.id}} .wrap_title .section-title {
			text-align: {{section.settings.heading_align}};
		}
	{% endif %}
	{% if section.settings.heading_spacing %}
		.nt_se_{{section.id}} .wrap_title {
			margin-bottom: {{section.settings.heading_spacing}}px;
		}
	{% endif %}
	@media screen and (max-width: 767px) {
		.nt_se_{{section.id}} .wrap_title .section-title {
			font-size: {{section.settings.heading_size_mb}}px;
		}
	}
</style>

