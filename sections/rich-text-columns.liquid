{%- liquid 
    assign mainTitle = section.settings.main_title
    assign title1 = section.settings.title1
    assign title2 = section.settings.title2
    assign title3 = section.settings.title3 
    assign title4 = section.settings.title4
    assign title5 = section.settings.title5
    assign title6 = section.settings.title6
    
    assign sub_text1 = section.settings.sub_text1
    assign sub_text2 = section.settings.sub_text2
    assign sub_text3 = section.settings.sub_text3
    assign sub_text4 = section.settings.sub_text4
    assign sub_text5 = section.settings.sub_text5
    assign sub_text6 = section.settings.sub_text6

    if section.settings.col_num == "2"
      assign col_num = "33%"
    else 
      assign col_num = "50%"
    endif

    assign show_ckmk = section.settings.show_ckmk

    if section.settings.header_align != "center"
      assign header_padding = "0 50px"
    else 
      assign header_padding = "0"
    endif

    if section.settings.button_align != "center"
      assign button_padding = "0 50px"
    else 
      assign button_padding = "0"
    endif
-%}

<div class="nt_se_{{section.id}} {{section.settings.layout}} rich-text-columns-outer-container">
  {%- if mainTitle != "" -%}
    <h2 class="flex w__100  mb__40" style="justify-content: {{section.settings.header_align}}; padding: {{header_padding}}">{{mainTitle}}</h2>
  {%- endif -%}
  <div class="rich-text-columns-inner-container">
    {% for block in section.blocks %}
      <div class="rich-text-columns-text-outer-section" >
        {%- if show_ckmk -%}
          <div class="rich-text-columns-text-inner-section">
          <svg xmlns="http://www.w3.org/2000/svg" class="checkmark circle">
            <path id="ic_beenhere_24px" d="M14.8,26.983,9.8,21.99l1.408-1.408L14.8,24.157l7.579-7.579L23.782,18Z" transform="translate(-4 -9)" fill="#fff"/>
          </svg>
          </div>
        {%- endif -%}
        <div class="rich-text-columns-text-inner-section">
          <h3>{{block.settings.title}}</h3>
          <div class="rte_setting {{block.settings.align}}"><p>{{block.settings.body_text}}</p></div>
        </div>
      </div>
    {% endfor %}
  </div>
  {%- if section.settings.show_btn -%}
    <div class="rich-text-button w__100 flex" style="justify-content: {{section.settings.button_align}}; padding: {{button_padding}}">
      <a href="{{section.settings.btn_link}}">
        <button class="btn_icon_true">{{section.settings.btn_text}}</button>
      </a>
    </div>
  {%- endif -%}
</div>
  
<style>
  .rich-text-columns-inner-container {
    grid-template-columns: repeat({{section.settings.col_num}}, 1fr);
    gap: {{section.settings.grid_space}}px;
    display: grid;
  }
  @media screen and (max-width: 767px) {
    .rich-text-columns-inner-container {
      grid-template-columns: 1fr;
    }
  }
</style>
