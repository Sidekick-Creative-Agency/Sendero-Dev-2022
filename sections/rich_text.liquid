<div class="nt_se_{{section.id}} {{section.settings.layout}}">
  {%- render 'section_title',section:section -%}
  <div class="rte_setting {{section.settings.align}}">{{ section.settings.content }}</div>
  {%- if section.settings.show_btn -%}
    <div class="rich-text-button" style="text-align: {{section.settings.button_align}}; margin-top: {{section.settings.btn_mt}}px">
      <a href="{{section.settings.btn_link}}">
        <button class="btn_icon_true">{{section.settings.btn_text}}</button>
      </a>
    </div>
    {%- endif -%}
</div>

<style>
  .nt_se_{{section.id}} ul, .nt_se_{{section.id}} ol {
    margin-left: {{section.settings.list_mg_left}}px;
    margin-top: {{section.settings.list_mg_top}}px;
  }
  {% if section.settings.ul_marker %}
  .nt_se_{{section.id}} ul {
    list-style-type: none;
  }
  .nt_se_{{section.id}} ul li::before {
    content: "â€“";
    margin-right: 8px;
  }
  {% endif %}
</style>

