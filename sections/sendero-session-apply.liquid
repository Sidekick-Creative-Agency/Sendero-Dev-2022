<div class="sendero-sessions-rich-text nt_se_{{section.id}} {{section.settings.layout}}">
    {%- render 'section_title',section:section,section_title:'mb__20' -%}
    <div class="rte_setting {{section.settings.align}}">{{ section.settings.content }}</div>
    <div><button type="submit" class="sendero-apply-btn css_add_ld btn_new_icon_{{btn_icon}} w__100 submit-btn truncate{% if checkbox_mail %} mail_agree pr{% endif %}"><span>SUBMIT</span></button></div>
  </div>
  
