    <div class="col-12 col-md-6 ">
      <div class="nt_img_txt oh pr middle center indiv-product-img">
        {%- comment -%}<a href="{{ url | default:'#' }}" class="db">{%- endcomment -%}
          {%- if image != blank -%}
            <div class="nt_bg_lz lazyloadt4s item__position {{se_stts.img_align}}" data-bgset="{{ image2 | img_url: '1x1' }}" data-sizes="auto" data-ratio="{{image2.aspect_ratio}}" data-parent-fit="cover" style="padding-top:{{ 1 | divided_by: image.aspect_ratio | times: 100}}%;"></div>
          {%- else -%}
