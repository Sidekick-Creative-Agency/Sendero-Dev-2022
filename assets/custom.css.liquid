/*---------------- Global Custom CSS -------------------*/
{{settings.global_css }}


      .branding img {
        margin-left:10px;
        padding-top:20px;
        padding-bottom:20px;        
      }

      .nt_action {
        margin-right: 15px;
      }

      .nt_menu >li>a {
        margin-right: 15px;
        margin-left: 15px;
        text-transform: uppercase;
      }

      .nt_menu >li>a:hover:after, .nt_menu >li>a:focus:after {
        content: "";
        background: #999;
        position: absolute;
        bottom: 10px;
        left: 0;
        right: 0;
        margin-left: auto; 
        margin-right: auto;
        height: 2px;
        width: 70%;
        }

      .h_transparent_true.template-index .ntheader:not(.live_stuck) .nt_menu .type_mega .sub-menu {
        top:100px
      }
        
      .nt_menu .type_mega .sub-menu {
        background: #000;
        padding: 50px;
        box-shadow: none;
        -webkit-box-shadow: none;
      }
    
/*---------------- Custom CSS for only desktop -------------------*/
@media (min-width: 1025px) {
  {{settings.desktop_css }}
}

/*---------------- Custom CSS for tablet, mobile -------------------*/
@media (max-width: 1024px) {
  {{settings.tablet_mobile_css }}
}

/*---------------- Custom CSS for only tablet -------------------*/
@media (min-width: 768px) and (max-width: 1024px) {
  {{settings.tablet_css }}
}

/*---------------- Custom CSS for only mobile -------------------*/
@media (max-width: 767px){
  {{settings.mobile_css }}
}